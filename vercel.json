{
  "version": 2,
  "buildCommand": "npm ci && npm run build:vercel",
  "installCommand": "npm ci",
  "outputDirectory": "build",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "github": {
    "silent": true
  },
  "env": {
    "REACT_APP_API_URL": "https://yarba-api.vercel.app/api/v1",
    "REACT_APP_DEBUG": "false",
    "REACT_APP_FIREBASE_PROJECT_ID": "yarba-app"
  }
} 